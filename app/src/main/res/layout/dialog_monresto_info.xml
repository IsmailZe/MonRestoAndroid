<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_margin="8dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/view_root"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:src="@drawable/illlustration" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/googlesans_bold"
                        android:gravity="center"
                        android:padding="@dimen/space_20dp"
                        android:text="Nos hommes sont mobilisés pour aller faire les courses à votre place et vous livrer"
                        android:textColor="#24323A"
                        android:textSize="@dimen/text_size_mediumx" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:layout_margin="39dp"
                            android:background="#1C2BB999" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/setp_1_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/space_20dp"
                                    android:background="@drawable/circle_bg"
                                    android:fontFamily="@font/googlesans_bold"
                                    android:gravity="center"
                                    android:text="1"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_size_large" />

                                <TextView
                                    android:id="@+id/setp_1_des"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/space_8dp"
                                    android:layout_toRightOf="@+id/setp_1_txt"
                                    android:fontFamily="@font/googlesans_medium"
                                    android:text="Commandez"
                                    android:textColor="#4A4A4A"
                                    android:textSize="@dimen/text_size_medium" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/setp_2_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/space_20dp"
                                    android:background="@drawable/circle_bg"
                                    android:fontFamily="@font/googlesans_bold"
                                    android:gravity="center"
                                    android:text="2"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_size_large" />

                                <TextView
                                    android:id="@+id/setp_2_des"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/space_8dp"
                                    android:fontFamily="@font/googlesans_medium"
                                    android:text="Votre acheteur vous appelle le lendemain pour valider avec vous selon les disponibilités."
                                    android:textColor="#4A4A4A"
                                    android:textSize="@dimen/text_size_medium" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/setp_3_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/space_20dp"
                                    android:background="@drawable/circle_bg"
                                    android:fontFamily="@font/googlesans_bold"
                                    android:gravity="center"
                                    android:text="3"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/text_size_large" />

                                <TextView
                                    android:id="@+id/setp_3_des"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="@dimen/space_8dp"
                                    android:fontFamily="@font/googlesans_medium"
                                    android:text="Payez à la livraison selon facture grâce à Semsem Pay."
                                    android:textColor="#4A4A4A"
                                    android:textSize="@dimen/text_size_medium" />
                            </LinearLayout>
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space_20dp"
                android:background="@drawable/btn_popup_bg"
                android:fontFamily="@font/googlesans_medium"
                android:text="J’AI COMPRIS"
                android:textColor="#2BB999"
                android:textSize="@dimen/text_size_mediumx" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
